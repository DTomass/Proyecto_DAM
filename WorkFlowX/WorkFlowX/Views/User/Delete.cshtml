@model WorkFlowX.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/bundles/Plugins/css")
</head>
<body>
    <div class="container">
        <h3>Are you sure you want to delete this user?</h3>
            <div class="alert alert-warning" role="alert">
                <div class="row">
                    <div class="col-1">
                        <i class="fas fa-solid fa-triangle-exclamation" style="transform: scale(5) translateX(40%) translateY(30%); color: #ffae52;"></i>
                    </div>
                    <div class="col-11">
                        <h4 class="alert-heading">Warning</h4>
                        <p>This action can not be undone</p>
                    </div>
                </div>
        </div>
        <div>
            <h4>User</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UserSurname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserSurname)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UserMail)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserMail)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Token)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Token)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UserPhone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserPhone)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Gender)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Birthdate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Birthdate)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
