@model WorkFlowX.Models.Company

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .license-list {
            max-height: 100px;
            overflow-y: auto;
        }
    </style>
    @Styles.Render("~/bundles/Plugins/css")
</head>
<body>
    <div class="container">
        <h3>Are you sure you want to delete this company?</h3>
        <div class="alert alert-warning" role="alert">
            <div class="row">
                <div class="col-1">
                    <i class="fas fa-solid fa-triangle-exclamation" style="transform: scale(5) translateX(40%) translateY(30%); color: #ffae52;"></i>
                </div>
                <div class="col-11">
                    <h4 class="alert-heading">Warning</h4>
                    <p>This action cannot be undone.</p>
                </div>
            </div>
        </div>
        <div>
            <h4>Company</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CompanyName)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CompanyNif)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyNif)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CompanyAddress)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyAddress)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CompanyPhone)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyPhone)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CompanyMail)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyMail)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CompanyWeb)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyWeb)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CompanyCountry)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyCountry)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CompanyCity)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyCity)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RegisterDate)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RegisterDate)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
