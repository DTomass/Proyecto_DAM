@model WorkFlowX.Models.Project

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/bundles/Plugins/css")
</head>
<body>
    <div class="container">
        <h3>Are you sure you want to delete this project?</h3>
        <div class="alert alert-warning" role="alert">
            <div class="row">
                <div class="col-1">
                    <i class="fas fa-solid fa-triangle-exclamation" style="transform: scale(5) translateX(40%) translateY(30%); color: #ffae52;"></i>
                </div>
                <div class="col-11">
                    <h4 class="alert-heading">Warning</h4>
                    <p>This action can not be undone</p>
                </div>
            </div>
        </div>
        <div>
            <h4>Project</h4>
            <hr />
            <dl class="row">
                <dt>
                    @Html.DisplayNameFor(model => model.Company.CompanyName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Company.CompanyName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
