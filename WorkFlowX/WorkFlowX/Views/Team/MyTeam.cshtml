@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyTeam</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            height: 100vh;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container-fluid">
                @Html.ActionLink("WORKFLOWX", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">@Html.ActionLink("Users", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Roles", "Index", "Role", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Companies", "Index", "Company", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Log out", "Logout", "Start", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 d-flex flex-column flex-shrink-0 p-3 text-white bg-dark sidebar">
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <div class="nav-link" aria-current="page">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link active" aria-current="page">
                            @Html.ActionLink("My Team", "MyTeam", "Team", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link" aria-current="page">
                            @Html.ActionLink("My Projects", "Index", "Proyect", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link" aria-current="page">
                            @Html.ActionLink("My Tasks", "Index", "Task", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-10">
                <h1>My Team</h1>

                <h2>Your Team</h2>
                <div class="row">
                    <div class="mb-3 col-2">
                        <label>Manager</label>
                        <span class="form-control-plaintext">@ViewBag.TeamManager</span>
                    </div>
                    <div class="mb-3 col-2">
                        <label>Name</label>
                        <span class="form-control-plaintext">@ViewBag.MyTeam.Name</span>
                    </div>
                    <div class="mb-3 col-6">
                        <label>Description</label>
                        <span class="form-control-plaintext">@ViewBag.MyTeam.Description</span>
                    </div>
                    <div class="mb-3 col-2">
                        <label>Status</label>
                        <span class="form-control-plaintext">@ViewBag.MyTeam.Status.ToString()</span>
                    </div>
                </div>


                <h2>Other Team Members</h2>
                <table class="table table-responsive table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Mail</th>
                            <th>Phone</th>
                            <th>Company</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in ViewBag.MyCompanions)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.UserSurname</td>
                                <td>@user.UserMail</td>
                                <td>@user.UserPhone</td>
                                <td>@user.Company.CompanyName</td>
                                <td>@user.Role.RoleName</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <footer>
        <div class="container-fluid">
            <hr />
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        @functions {
            public string isActive(string action)
            {
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                return currentAction == action ? "active" : "";
            }
        }

    </script>
</body>


</html>

