@model WorkFlowX.Models.Dtos.RoleDTO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .license-list {
            max-height: 100px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.RoleName)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.RoleName)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Licenses)
            </dt>

            <dd class="col-sm-9 license-list">
                @foreach (var license in Model.Licenses)
                {
                    <div>@license.NameWithArea</div>
                }
            </dd>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
            </p>
        </dl>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
