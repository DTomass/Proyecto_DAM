@using PagedList.Mvc;
@using WorkFlowX.Models.Enums;
@model PagedList.IPagedList<WorkFlowX.Models.Task>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Projects</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            height: 100vh;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="~/Content/PagedList.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container-fluid">
                @Html.ActionLink("WORKFLOWX", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">@Html.ActionLink("Users", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Roles", "Index", "Role", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Companies", "Index", "Company", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Log out", "Logout", "Start", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 d-flex flex-column flex-shrink-0 p-2 text-white bg-dark sidebar">
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <div class="nav-link" aria-current="page">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link" aria-current="page">
                            @Html.ActionLink("My Team", "MyTeam", "Team", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link" aria-current="page">
                            @Html.ActionLink("My Projects", "Index", "Proyect", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link active" aria-current="page">
                            @Html.ActionLink("My Tasks", "Index", "Task", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                    </li>
                </ul>
            </div>

            <div class="col-10">
                <h2>My Tasks</h2>
                    <div class="row">
                        <div class="col-md-2 p-0">
                            <div class="card p-0">
                                <div class="card-header">Planning</div>
                                <div class="card-body">
                                    @foreach (var task in Model)
                                    {
                                        if (task.Status == TaskStatusEnum.Planning)
                                        {
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">@task.Name</h6>
                                                    <p class="card-text">@task.Description</p>
                                                    <p class="card-text">Start Date: @task.StartDate</p>
                                                    <p class="card-text">End Date: @task.EndDate</p>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 p-0">
                            <div class="card p-0">
                                <div class="card-header">Pending</div>
                                <div class="card-body">
                                    @foreach (var task in Model)
                                    {
                                        if (task.Status == TaskStatusEnum.Pending)
                                        {
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">@task.Name</h6>
                                                    <p class="card-text">@task.Description</p>
                                                    <p class="card-text">Start Date: @task.StartDate</p>
                                                    <p class="card-text">End Date: @task.EndDate</p>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 p-0">
                            <div class="card p-0">
                                <div class="card-header">In Progress</div>
                                <div class="card-body">
                                    @foreach (var task in Model)
                                    {
                                        if (task.Status == TaskStatusEnum.InProgress)
                                        {
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">@task.Name</h6>
                                                    <p class="card-text">@task.Description</p>
                                                    <p class="card-text">Start Date: @task.StartDate</p>
                                                    <p class="card-text">End Date: @task.EndDate</p>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 p-0">
                            <div class="card p-0">
                                <div class="card-header">Done</div>
                                <div class="card-body">
                                    @foreach (var task in Model)
                                    {
                                        if (task.Status == TaskStatusEnum.Done)
                                        {
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">@task.Name</h6>
                                                    <p class="card-text">@task.Description</p>
                                                    <p class="card-text">Start Date: @task.StartDate</p>
                                                    <p class="card-text">End Date: @task.EndDate</p>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 p-0">
                            <div class="card p-0">
                                <div class="card-header">Review</div>
                                <div class="card-body">
                                    @foreach (var task in Model)
                                    {
                                        if (task.Status == TaskStatusEnum.InReview)
                                        {
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">@task.Name</h6>
                                                    <p class="card-text">@task.Description</p>
                                                    <p class="card-text">Start Date: @task.StartDate</p>
                                                    <p class="card-text">End Date: @task.EndDate</p>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 p-0">
                            <div class="card p-0">
                                <div class="card-header">Completed</div>
                                <div class="card-body">
                                    @foreach (var task in Model)
                                    {
                                        if (task.Status == TaskStatusEnum.Completed)
                                        {
                                            <div class="card">
                                                <div class="card-body">
                                                    <h6 class="card-title">@task.Name</h6>
                                                    <p class="card-text">@task.Description</p>
                                                    <p class="card-text">Start Date: @task.StartDate</p>
                                                    <p class="card-text">End Date: @task.EndDate</p>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
